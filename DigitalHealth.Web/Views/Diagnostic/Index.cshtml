
<div id="loading">
    <h3 style="color:white">Загрузка, пожалуйста подождите...</h3>
</div>
<div class="alert alert-danger" role="alert" id="erorr-message">

</div>
<div id="CreateDialog" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel"><b>Оценить</b></h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group" hidden>
                        <input type="text" class="form-control" id="create-methodid" hidden>
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Комментарий</label>
                        <input type="text" class="form-control" id="create-comment">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Выберите оценку</label>
                        <select id="create-value" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Cancel()">Отменить</button>
                <button type="button" class="btn btn-primary" onclick="CreateItem()">Создать</button>
            </div>
        </div>
    </div>
</div>
<div id="MarksDialog" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">

        <div class="modal-content">
            <div id="dialogContent" class="modal-dialog" role="document">

                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLabel"><b>Оценки</b></h3>
                </div>
                <div class="modal-body">
                    <div id="marks-container">

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="Cancel" onclick="Cancel()">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<br />
<div class="form-group">
    <label for="message-text" class="col-form-label">Выберите симптомы</label>
    <div class="row">
        <div class="col-sm-3">
            <select id="diagnostic-add-symptom" class="form-control">
            </select>
        </div>
        <div class="col-sm-2">
            <button type="button" class="btn btn-default btn-sm" onclick="AddSymptom()" id="button-add-symptom">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Добавить
            </button>
        </div>
        <div class="col-sm-3">
            <button type="button" class="btn btn-success btn-sm" onclick="Diagnostic()">
                Диагностика
            </button>
        </div>
    </div>
</div>
<div class="row">

    <div class="col-sm-4">
        <div class="form-group">
            <label for="message-text" class="col-form-label">Выбранные симптомы</label>
            <ul id="diagnostic-selected-symptom">
            </ul>
        </div>
    </div>
    <div class="col-sm-1"></div>
    <div class="col-sm-7">
        <table class="table table-striped" id="table-method-result"></table>
        <table class="table table-striped" id="diagnostic-result"></table>
    </div>
</div>
<style>
    #loading {
        background: no-repeat center center rgba(0,0,0,0.7);
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        z-index: 9999999;
    }

    .hide {
        display: none;
    }
</style>
@section scripts
{
    <script src="~/Scripts/View/Diagnostic.js"></script>

